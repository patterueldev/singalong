# Build the docker image with `npx nx docker-build singalong-server`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t singalong-server`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system singalong-server && \
          adduser --system -G singalong-server singalong-server

COPY dist/apps/singalong-server singalong-server
RUN chown -R singalong-server:singalong-server .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix singalong-server --omit=dev -f install

CMD [ "node", "singalong-server" ]
